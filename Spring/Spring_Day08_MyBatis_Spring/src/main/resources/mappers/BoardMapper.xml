<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.mvc.model.dao.BoardDao">
	<!--
	 id에 DAO의 메서드 명을 작성한다.
	 그리고 실행할 SQL 문을 하단에 작성한다.		
	 -->
	<!-- <select id="selectAll" resultType = "Board">  
		SELECT * FROM board;
	 </select> -->
	 
	<!-- 내가 지정한 이름으로 결과를 반환한다. -->  
	<resultMap id = "boardMap" type = "Board" >
		<result column = "view_cnt" property = "viewCnt" />
		<result column = "reg_date" property = "regDate" />
	</resultMap> 
	 
	 <!-- 전체 게시글을 조회한다. -->
	<select id="selectAll" resultType = "Board">  
		<!-- SELECT id, title, writer,content, reg_date as regDate, view_cnt as viewCnt FROM board; -->
		SELECT * FROM board;
	 </select> 	 
	 
	 <!-- 상세 게시글을 조회한다. -->
	 <select id = "selectOne" resultType ="Board" parameterType = "int">
	 	SELECT * FROM board
	 	WHERE id = #{id};
	 	
	 </select>
	 
	 <!-- 게시글 등록 -->
	 <insert id="insertBoard" parameterType = "Board">
	 	INSERT INTO board(title, writer, content)
	 	VALUES (#{title}, #{writer}, #{content});
	 </insert>
	 
	 <!-- 게시글 삭제 -->
	 <delete id = "deleteBoard" parameterType = "int">
	 	DELETE FROM board
	 	WHERE id = #{id};
	 </delete>
	 
	 <!--게시글 수정 -->
	 <update id = "updateBoard" parameterType = "Board">
	 	UPDATE board
	 	SET title = #{title}, content = #{content}, reg_date = now()
	 	WHERE id = #{id};
	 </update>
	 
	 <!-- 조회수 증가 -->
	 <update id = "updateViewCnt" parameterType = "int">
	 	UPDATE board
	 	SET view_cnt = view_cnt + 1
	 	WHERE id =#{id};
	 </update>
	 
	 
	 
</mapper>